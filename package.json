{
  "name": "meme-generator-mcp",
  "version": "0.1.0",
  "description": "MCP server that generates memes from text content using memegen.link",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "meme-generator-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "tsc && node dist/index.js",
    "dev:http": "MCP_TRANSPORT=http PORT=3000 tsc && node dist/index.js",
    "inspector": "tsc && npx @modelcontextprotocol/inspector node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "docker:build": "docker build -t meme-generator-mcp .",
    "docker:run": "docker run -p 3000:3000 --env-file .env meme-generator-mcp",
    "docker:dev": "docker run -p 3000:3000 -e MCP_TRANSPORT=http -e PORT=3000 meme-generator-mcp"
  },
  "keywords": [
    "mcp",
    "meme",
    "memegen",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.25.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "cheerio": "^1.1.2",
    "compromise": "^14.14.5",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
